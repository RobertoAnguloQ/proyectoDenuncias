<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Paso_dos"
    android:padding="16dp">

    <!-- Barra superior personalizada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Denuncia"
        app:navigationIcon="@drawable/ic_back"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Imagen superior o icono central -->
    <ImageView
        android:id="@+id/imgDenuncia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_denuncia"
        android:contentDescription="Icono de denuncia"
        android:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Texto principal -->
    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿A quién va dirigida su denuncia?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/imgDenuncia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Enlace para información adicional -->
    <TextView
        android:id="@+id/tvConoceABC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conoce el ABC de las denuncias"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botones de opciones -->
    <Button
        android:id="@+id/btnServidorPublico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Servidor Público"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/tvConoceABC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnVehiculo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Vehículo"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnServidorPublico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnServicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Servicio"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/btnVehiculo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
